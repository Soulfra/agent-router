# Perplexity Vault Brand Configuration
BRAND=perplexityvault
DOMAIN=perplexityvault.com
OWNER_EMAIL=vault@perplexityvault.com
OWNER_WEBSITE=perplexityvault.com

# Brand Identity
BRAND_NAME="Perplexity Vault"
BRAND_TAGLINE="Search. Save. Discover. Your Personal Knowledge Fortress."
BRAND_COLOR_PRIMARY="#1e3a8a"  # Deep blue
BRAND_COLOR_SECONDARY="#3b82f6"  # Sky blue
BRAND_COLOR_ACCENT="#fbbf24"  # Gold

# Feature Flags
ENABLE_WEB_SEARCH=true
ENABLE_KNOWLEDGE_VAULT=true
ENABLE_SEARCH_HISTORY=true
ENABLE_SAVED_SEARCHES=true
ENABLE_RESEARCH_ASSISTANT=true
ENABLE_CROSS_LINKING=true
ENABLE_IDENTITY_VERIFICATION=false
ENABLE_FEDERATION=false
ENABLE_LIBRARIAN=false
ENABLE_CALRIVEN_PERSONA=false

# API Configuration
DEFAULT_MODEL=web-search
FALLBACK_MODEL=llama3.2:3b
ENABLE_AUTO_TRANSLATE=true
SUPPORTED_LANGUAGES=en,es

# Storage
VAULT_NAMESPACE=perplexity:vault
SEARCH_HISTORY_NAMESPACE=perplexity:history
SAVED_SEARCHES_NAMESPACE=perplexity:saved

# Rate Limiting (per user)
RATE_LIMIT_SEARCH_PER_HOUR=100
RATE_LIMIT_SEARCH_PER_DAY=1000
RATE_LIMIT_AI_PER_HOUR=50
RATE_LIMIT_AI_PER_DAY=500

# UI Configuration
SHOW_BRAND_HEADER=true
SHOW_SEARCH_BAR=true
SHOW_TRENDING=true
SHOW_CATEGORIES=true
DEFAULT_SEARCH_ENGINE=duckduckgo

# SEO
META_TITLE="Perplexity Vault - Your Personal Knowledge Fortress"
META_DESCRIPTION="Save, search, and discover knowledge with AI-powered research assistant. Private, encrypted, forever yours."
META_KEYWORDS="search,vault,knowledge,research,AI,perplexity,private search"

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_PROVIDER=plausible
ANALYTICS_DOMAIN=perplexityvault.com
