# ============================================================================
# CALOS PLATFORM CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# Run: cp .env.example .env
# Or use the interactive setup wizard: npm run setup

# ============================================================================
# OWNER INFORMATION
# ============================================================================
OWNER_NAME="Matthew Mauer"
OWNER_EMAIL="matt@soulfra.com"
OWNER_GITHUB="matthewmauer"
OWNER_NPM="matthewmauer"
OWNER_WEBSITE="soulfra.com"

# ============================================================================
# SOCIAL OAUTH (Twitter/X, GitHub, Discord, LinkedIn)
# ============================================================================
# Setup guide: See docs/SOCIAL-AUTH-SETUP.md

# Twitter/X OAuth 2.0
# Get credentials at: https://developer.x.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# GitHub OAuth
# Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Discord OAuth
# Get credentials at: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# LinkedIn OAuth
# Get credentials at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# OAuth Callback Base URL (change in production)
OAUTH_CALLBACK_BASE_URL=http://localhost:5001

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
NODE_ENV=development
HOST=localhost

# CORS Configuration
CORS_ORIGIN=*

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calos
DB_USER=your_username
DB_PASSWORD=your_password

# ============================================================================
# LLM PROVIDERS
# ============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=

# Ollama Configuration (local LLM server)
# Default: http://localhost:11434 (only accessible from this machine)
# For network access: http://0.0.0.0:11434 or http://192.168.1.87:11434
# Set OLLAMA_HOST on the server side: export OLLAMA_HOST=0.0.0.0:11434
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================================================
# SEO & ANALYTICS
# ============================================================================
AHREFS_API_KEY=
GA_PROPERTY_ID=

# ============================================================================
# GOOGLE SERVICES
# ============================================================================
GOOGLE_SHEETS_SERVICE_ACCOUNT=./config/google-service-account.json
GOOGLE_SHEETS_SPREADSHEET_ID=

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs for each subscription tier
# Create these in Stripe Dashboard → Products → Add product → Create pricing
STRIPE_PRICE_STARTER=price_xxxxxxxxxxxxx
STRIPE_PRICE_PRO=price_xxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxxxxxxx

# ============================================================================
# WEBHOOKS
# ============================================================================
# Firebase webhook secret (for HMAC signature verification)
FIREBASE_WEBHOOK_SECRET=

# PayPal webhook secrets
PAYPAL_WEBHOOK_ID=
PAYPAL_WEBHOOK_SECRET=

# ============================================================================
# COMMUNICATIONS (Twilio)
# ============================================================================
# Twilio credentials for SMS, calls, and phone verification
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WEBHOOK_URL=

# Public URL for Twilio webhooks (production only)
# Should match your production domain
PUBLIC_URL=http://localhost:3000

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
JWT_SECRET=
JWT_REFRESH_SECRET=
SESSION_SECRET=

# Session Duration Configuration
# SESSION_TIMEOUT_HOURS: Maximum session inactivity before cleanup (default: 8 hours)
# SESSION_TOKEN_HOURS: JWT access token lifetime (default: 4 hours, should be <= SESSION_TIMEOUT_HOURS)
# For testing long-form interactions (warmup campaigns, training tasks), use 6-8 hours
# For production, consider 1-2 hours with refresh token mechanism
SESSION_TIMEOUT_HOURS=8
SESSION_TOKEN_HOURS=4

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_EXECUTIVE_DASHBOARD=true
ENABLE_CRUD_MONITORING=true
ENABLE_USAGE_PRICING=true
ENABLE_AFFILIATE_TRACKING=false
ENABLE_DOMAIN_VOTING=false

# ============================================================================
# AFFILIATE PROGRAMS
# ============================================================================
AFFILIATE_STRIPE_RATE=0.20
AFFILIATE_AMAZON_RATE=0.04
AFFILIATE_AHREFS_RATE=0.20
AFFILIATE_COOKIE_DURATION=30

# ============================================================================
# For interactive setup, run: npm run setup
# Support: matt@soulfra.com
# ============================================================================
